    <!-- JavaScript สำหรับ Falling Stars Animation -->
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const starContainer = document.createElement('div');
            document.body.appendChild(starContainer);
            
            // ใช้สีขาวและสีทองสำหรับประกายดาว
            const colors = ['#ffffff', '#fdfd96', '#ffd700', '#eee']; 
            const numStars = 70; // เพิ่มจำนวนอนุภาคเล็กน้อย

            function createFallingStars() {
                for (let i = 0; i < numStars; i++) {
                    const star = document.createElement('div');
                    star.classList.add('falling-star');
                    
                    // สุ่มตำแหน่งเริ่มต้น (x-axis)
                    star.style.left = `${Math.random() * 100}vw`; 
                    // สุ่มสี (ขาวหรือทอง)
                    star.style.setProperty('--color', colors[Math.floor(Math.random() * colors.length)]);
                    // สุ่มระยะเวลาการร่วง (ช้าลงและสง่างามขึ้น)
                    star.style.setProperty('--duration', `${(Math.random() * 5) + 8}s`); 
                    // สุ่มขนาด
                    star.style.width = `${Math.random() * 2 + 2}px`;
                    star.style.height = star.style.width;
                    // สุ่มดีเลย์เพื่อให้การร่วงต่อเนื่อง
                    star.style.animationDelay = `-${Math.random() * 10}s`;

                    starContainer.appendChild(star);

                    // ลบ star หลังจบการร่วง (ป้องกัน DOM รก)
                    setTimeout(() => star.remove(), 15000); 
                }
            }
            
            // สร้างดาวชุดแรกเมื่อโหลดหน้าเว็บ
            createFallingStars(); 
            // สร้างดาวใหม่ทุกๆ 5 วินาที เพื่อให้มีเอฟเฟกต์ต่อเนื่อง
            setInterval(createFallingStars, 5000); 


            // จัดการเรื่องการเล่นเพลงอัตโนมัติ (Autoplay)
            const music = document.getElementById('background-music');
            if (music.hasAttribute('autoplay')) {
                music.play().catch(error => {
                    console.log("Autoplay was prevented. User needs to interact with the page to start music.");
                });
            }
        });
    </script>
